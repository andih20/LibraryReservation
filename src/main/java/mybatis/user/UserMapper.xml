<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.user.UserDao">
<!--    增加用户-->
    <insert id="addUser" parameterType="pojo.User">
        insert into user(uname,upassword,uemail) value #{uname},#{upassword},#{uemail}
    </insert>

<!--    查找一个用户-->
    <select id="queryUser" parameterType="User" resultType="User">
        select * from user where uname=#{uname} and upassword=#{upassword}
    </select>

    <!--    查找一个用户通过email&name-->
    <select id="queryUserByEmail" parameterType="User" resultType="User">
        select * from user where uname=#{uname} and uemail=#{uemail}
    </select>
</mapper>